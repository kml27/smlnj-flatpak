{
    "app-id": "org.smlnj.sml",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "18.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "sml",
    "finish-args": [
        "--filesystem=host",
        "--share=network",
        "--socket=x11",
        "--share=ipc"
    ],
    "modules": [
        {
            "name": "sml",
            "buildsystem": "simple",
            "build-commands": [
                "shopt -s dotglob",
                "mkdir /app/config",
                "mv `ls --ignore='*.tgz'` /app/config",
                "mv * /app/",
                "(cd /app; config/install.sh)",
                "rm /app/*.tgz"
            ],
            "sources": [
                {
                    "type": "archive",
                    "path": "archives/config.tgz"
                },
                {
                    "type":"dir",
                    "path":"archives"
                }

            ]
        }
    ]
}
